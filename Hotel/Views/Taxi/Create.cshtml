@using Hotel.Data.Enums
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["Title"] = "Create Taxi";
}
@if ((User.Identity?.IsAuthenticated ?? false) &&
User.IsInRole(UserRoles.Admin.ToString()) || User.IsInRole(UserRoles.Taximan.ToString()))
{
                    <h2>Create Taxi</h2>

                    <form method="post" asp-controller="Taxi" asp-action="Create">
                <p>
                    <label>Number</label>
                    <input type="number" name="number" />
                </p>

                <p>
                    <label>Type</label>
                    <input type="text" name="type" />
                </p>

                <p>
                    <label>Rentability</label>
                    <input type="text" name="rentability" />
                </p>

                <p>
                    <label>PricePerMinute</label>
                    <input type="number" name="pricePerMinute" />
                </p>

                <button type="submit">Create</button>
            </form>
}
else
{
                <h2 class="text-danger">You can't access this page if you aren't logged in</h2>
}
