@using Hotel.Data.Enums
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{ 

    ViewData["Title"] = "Edit Taxi";
}
@if ((User.Identity?.IsAuthenticated ?? false) &&
User.IsInRole(UserRoles.Admin.ToString()) || User.IsInRole(UserRoles.Taximan.ToString()))
{
                <h2>Edit Taxi</h2>

                <form method="post" asp-controller="Taxi" asp-action="Edit" asp-route-id="@Model.Id">
                <p>
                    <label>Number</label>
                    <input type="number" name="number" value="@Model.Number"/>
                </p>

                <p>
                    <label>Type</label>
                    <input type="text" name="type" value="@Model.Type"/>
                </p>

                <p>
                    <label>Rentability</label>
                    <input type="text" name="rentability" value="@Model.Rentability"/>
                </p>

                <p>
                    <label>PricePerMinute</label>
                    <input type="number" name="pricePerDay" value="@Model.PricePerMinute"/>
                </p>

                <button type="submit">Edit</button>

                    <button asp-controller="Taxi" asp-action="Index">Cancel</button>
            </form>
}
else
{
                <h2 class="text-danger">You can't access this page if you aren't logged in</h2>
}
