@using Hotel.Data.Enums
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{ 

    ViewData["Title"] = "Edit Parking Slot";
}
@if ((User.Identity?.IsAuthenticated ?? false) &&
User.IsInRole(UserRoles.Admin.ToString()) || User.IsInRole(UserRoles.Staff.ToString()))
{
            <h2>Edit Parking Slot</h2>

            <form method="post" asp-controller="ParkingSlot" asp-action="Edit" asp-route-id="@Model.Id">
            <p>
                <label>Number</label>
                <input type="number" name="number" value="@Model.Number"/>
            </p>

            <p>
                <label>Type</label>
                <input type="text" name="type" value="@Model.Type"/>
            </p>

            <p>
                <label>Rentability</label>
                <input type="text" name="rentability" value="@Model.Rentability"/>
            </p>

            <p>
                <label>PricePerDay</label>
                <input type="number" name="pricePerDay" value="@Model.PricePerDay"/>
            </p>

            <button type="submit">Edit</button>

                <button asp-controller="ParkingSlot" asp-action="Index">Cancel</button>
        </form>
}
else
{
            <h2 class="text-danger">You can't access this page if you aren't logged in</h2>
}
