@using Hotel.Data.Enums
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["Title"] = "Create Review";
}
@if ((User.Identity?.IsAuthenticated ?? false) &&
User.IsInRole(UserRoles.Admin.ToString()) || User.IsInRole(UserRoles.User.ToString()))
{
                    <h2>Create Review</h2>

                    <form method="post" asp-controller="Review" asp-action="Create">
                <p>
                    <label>Number</label>
                    <input type="id" name="id" />
                </p>

                <p>
                    <label>Type</label>
                    <input type="comment" name="comment" />
                </p>

                <button type="submit">Create</button>
            </form>
}
else
{
                <h2 class="text-danger">You can't access this page if you aren't logged in</h2>
}
