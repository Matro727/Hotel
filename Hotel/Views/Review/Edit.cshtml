@using Hotel.Data.Enums
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{ 

    ViewData["Title"] = "Edit Reviews";
}
@if ((User.Identity?.IsAuthenticated ?? false) &&
User.IsInRole(UserRoles.Admin.ToString()) || User.IsInRole(UserRoles.User.ToString()))
{
                    <h2>Edit Reviews</h2>

                    <form method="post" asp-controller="Review" asp-action="Edit" asp-route-id="@Model.Id">
                <p>
                    <label>Number</label>
                    <input type="number" name="number" value="@Model.Id"/>
                </p>

                <p>
                    <label>Type</label>
                    <input type="text" name="type" value="@Model.Comment"/>
                </p>

                <button type="submit">Edit</button>

                        <button asp-controller="Review" asp-action="Index">Cancel</button>
            </form>
}
else
{
                <h2 class="text-danger">You can't access this page if you aren't logged in</h2>
}
