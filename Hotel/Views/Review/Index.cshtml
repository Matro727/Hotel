@using Hotel.Models.Review
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Reviews";
}

@model IEnumerable<ReviewViewModel>
@if (User.Identity?.IsAuthenticated ?? false)
{
                    <h2>Reviews</h2>

            <table class="table">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Type</th>
                    </tr>
                </thead>

                <tbody>
            @foreach (var review in Model)
            {
                                <tr>
                                                    <th>@review.Id</th>
                                                    <th>@review.Comment</th>
                                    <th>
                                        <button>
                                            <a 
                                            asp-controller="Review" 
                                            asp-action="Edit" 
                                                    asp-route-id="@review.Id">
                                                Edit
                                            </a>
                                        </button>
                                        <button>
                                            <a 
                                                    asp-controller="Review" 
                                            asp-action="Delete" 
                                                    asp-route-id="@review.Id">
                                                Delete
                                            </a>
                                        </button>
                                    </th>
                                </tr>
            }
                </tbody>
            </table>
}
else
{
            <h2 class="text-danger">You can't access this page if you aren't logged in</h2>
}

